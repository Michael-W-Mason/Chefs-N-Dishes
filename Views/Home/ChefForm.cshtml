@model Chef
<div class="d-flex flex-column justify-content-center gap-3 mt-3">
    <h1 class="mx-auto">Add a Chef</h1>
    <a href="/">Home</a>
    <form action="/chef/create" method="post" class="d-flex flex-row gap-5">
        <div class="d-flex flex-column gap-5">
            <div class="d-flex flex-column align-items-baseline">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" type="text">
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="d-flex flex-column align-items-baseline">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" type="text">
                <span asp-validation-for="LastName"></span>
            </div>
        </div>
        <div class="d-flex flex-column gap-5">
            <div class="d-flex flex-column align-items-baseline">
                <label asp-for="DOB">Date Of Birth</label>
                <input asp-for="DOB" type="date">
                <span asp-validation-for="DOB"></span>
            </div>
            <input class="mt-3 btn btn-primary" type="submit">
        </div>

    </form>
</div>