@model Dish
<div class="d-flex flex-column justify-content-center gap-3 mt-3">
    <h1 class="mx-auto">Add a Dish</h1>
    <a href="/dishes">Home</a>
    <form action="/dishes/create" method="post" class="d-flex flex-row gap-5">
        <div class="d-flex flex-column gap-5">
            <div class="d-flex flex-column align-items-baseline">
                <label asp-for="Name">Name of Dish</label>
                <input asp-for="Name" type="text">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="d-flex flex-column align-items-baseline">
                <label asp-for="Calories">Number of Calories</label>
                <input asp-for="Calories" type="number">
                <span asp-validation-for="Calories"></span>
            </div>
            <div class="d-flex flex-column align-items-baseline">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" cols="30" rows="10"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
        </div>
        <div class="d-flex flex-column gap-5 mx-5">
            <div class="d-flex flex-column align-items-baseline">
                <label asp-for="ChefId">Chef</label>
                <select asp-for="ChefId">
                    @{
                        foreach(Chef chef in ViewBag.chefs){
                            <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                        }
                    }
                </select>
                <span asp-validation-for="ChefId"></span>
            </div>
        </div>
        <div class="d-flex flex-column mx-5">
            <label asp-for="Tastiness">Tastiness</label>
            <select asp-for="Tastiness">
                <option value="" selected hidden disabled></option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Tastiness"></span>
            <input class="mt-3 btn btn-primary" type="submit">
        </div>
    </form>
</div>